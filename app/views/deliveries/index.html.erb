<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>

    <p>Know if something gets lost in the mail.</p>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_delivery" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="arrived_on_box">
          Supposed to arrive on
        </label>

        <input type="date" id="arrived_on_box" name="query_arrived_on">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details" rows="3"></textarea>
      </div>

      <div>
        <input type="hidden" id="user_id_box" name="query_user_id" value="<%= current_user.id %>">
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>

<div class="waiting_on" style="background-color: lightgoldenrodyellow">
  <h2>Waiting on</h2>
  <ul>
    <% @list_of_deliveries.each do |a_delivery| %>
      <li>
        <div><%= a_delivery.description %></div>
        <div>Supposed to arrive on <%= a_delivery.arrived_on %></div>
        <div><%= a_delivery.details %></div>
        <div>
          <form action="/modify_delivery/<%= a_delivery.id %>" method="post">
          <input type="hidden" name="arrived" value="true">
            
            <button>Mark as received</button>
          </form>
        </div>
      </li>
      <br>
    <% end %>
  </ul>
</div>

<hr>

<div class="received" style="background-color: lightgreen">
  <h2>Received</h2>
  <ul>
    <li>
    </li>
  </ul>
</div>
